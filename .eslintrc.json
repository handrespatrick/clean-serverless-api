{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "standard",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:jest/recommended",
        "plugin:node/recommended",
        "plugin:prettier/recommended",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "jest",
        "prettier"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "space-before-function-parent": 0
    },
    "ignorePatterns": [
        "build/*",
        "dist/*"
    ]
}